<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">プロフィール編集</h1>
      <%= form_for @user, html: { class: "form-group" } do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :rank, class: "form-label" %>
          <%= f.select :rank, User.ranks.keys.map { |rank| [rank.humanize, rank] }, {}, class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= f.label :lane, class: "form-label" %>
          <%= f.select :lane, User.lanes.keys.map { |lane| [lane.humanize, lane] }, {}, class: "form-select" %>
        </div>

        <div class="d-grid">
          <%= f.submit '更新', class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
