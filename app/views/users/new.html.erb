
<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="col-md-4">
  <h1 class="text-center mb-4">新規登録</h1>
    <%= form_with model: @user, local: true, class: "form-group" do |form| %>
      
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :rank, class: "form-label" %>
        <%= form.select :rank, User.ranks.keys.map { |rank| [rank.humanize, rank] }, { class: "form-select" } %>
      </div>

      <div class="mb-3">
        <%= form.label :lane, class: "form-label" %>
        <%= form.select :lane, User.lanes.keys.map { |lane| [lane.humanize, lane] }, { class: "form-select" } %>
      </div>

      <div class="d-grid">
        <%= form.submit '登録', class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
