<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4"><%= @user.name %>さんのプロフィール</h1>

      <div class="card">
      <div class="card-body">
        <div class="mb-3">
          <p class="card-text"><strong>Email:</strong></p>
          <p class="border p-2 rounded"><%= @user.email %></p>
        </div>
        
        <div class="mb-3">
          <p class="card-text"><strong>Rank:</strong></p>
          <p class="border p-2 rounded"><%= @user.rank.humanize %></p>
        </div>
        
        <div class="mb-3">
          <p class="card-text"><strong>Lane:</strong></p>
          <p class="border p-2 rounded"><%= @user.lane.humanize %></p>
        </div>
      </div>
    </div>
    
      <div class="mt-3 d-grid">
        <%= link_to 'プロフィール編集', edit_user_path(@user), class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
</div>
