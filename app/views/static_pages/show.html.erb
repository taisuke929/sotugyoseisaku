<h1><%= @board.title %></h1>
<p>ランク: <%= @board.rank %></p>
<p>レーン: <%= @board.lane %></p>
<p>目的: <%= @board.purpose %></p>

<h2>コメント</h2>
<% @comments.each do |comment| %>
  <div class="comment">
    <p><%= comment.user.name %> - <%= time_ago_in_words(comment.created_at) %>前</p>
    <p><%= comment.body %></p>

    <% if comment.user == current_user %>
   <%= link_to board_comment_path(@board, comment), method: :delete, data: { confirm: "本当に削除しますか？" }, id: "button-delete-#{comment.id}", class: "text-danger" do %>
        <i class="bi bi-trash-fill"></i>
      <% end %>
    <% end %>
  </div>
<% end %>

  <h3>コメントを追加する</h3>
  <%= form_with model: [@board, @comment],  local: true do |form| %>
    <div class="mb-3">
      <%= form.label :body, 'コメント', class: "form-label" %>
      <%= form.text_area :body, class: "form-control", rows: 5, required: true %>
    </div>
    <%= form.submit "投稿する", class: "btn btn-primary" %>
  <% end %>

  <%= link_to '戻る', root_path, class: 'btn btn-secondary mt-3' %>
</div>