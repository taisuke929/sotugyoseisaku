<h1>ログイン</h1>
<%= form_with url: session_path, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit 'ログイン' %>
  </div>
<% end %>

<!-- Googleでログインするリンクを表示 -->
<%= link_to "Googleでログイン", "/auth/google_oauth2", method: :post %>
<%= link_to 'パスワードを忘れた場合', new_password_reset_path %>

