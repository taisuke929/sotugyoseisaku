<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="col-md-4">
    <h1 class="text-center">ログイン</h1>
    <%= form_with url: session_path, local: true, class: "form-group" do |form| %>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>
      <div class="d-grid">
        <%= form.submit 'ログイン', class: "btn btn-primary" %>
      </div>
    <% end %>

    <p class="text-center mt-3">or</p>

    <div class="d-grid gap-2 mt-2">
      <div class="col-md-8 mx-auto">
        <%= link_to "/auth/google_oauth2", method: :post, class: "btn btn-danger btn-block" do %>
          <i class="fab fa-google"></i> Googleでログイン
        <% end %>
      </div>
    </div>

    <div class="text-center mt-2">
      <%= link_to 'パスワードを忘れた場合', new_password_reset_path, class: "btn btn-link" %>
    </div>
  </div>
</div>
